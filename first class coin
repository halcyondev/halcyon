# Precursor, set some variables.
# #set:
# #  {{swarum_blob_id}} => 0xb5e0478618d5e91682efc0e2a95b3d32cdae546c03f6014dc8df659c2f0f94c3
# # set:
# #   {{NameReg}} => 0x50441127ea5b9dfd835a9aba4e1dc9c1257b58ca

# First We Deploy DOUG
# deploy:
#   doug/doug-v7.lll => {{DOUG}}
#   (def 'DOUGDATAMODEL 0x0) =>
#   (def 'DOUGUIPOINTER 0x0) =>

# Deploy contracts
deploy:
  namereg.se => {{NameReg}}
deploy:
  halcyoncoin.se => {{Halcyoncoin}}
deploy:
  balances.se => {{Balances}}
deploy:
  indexes.se => {{Indexes}}
deploy:
  trades.se => {{Trades}}
deploy:
  markets.se => {{Markets}}
deploy:
  etx.se => {{ETX}}
deploy:
  xbtc.se => {{XBTC}}
deploy:
  cak.se => {{CAK}}
deploy:
  fab.se => {{FAB}}

# Register with DOUG
# transact:
#   {{DOUG}} => register halcyoncoin {{Halcyoncoin}}
# transact:
#   {{DOUG}} => register balances {{Balances}}
# transact:
#   {{DOUG}} => register indexes {{Indexes}}
# transact:
#   {{DOUG}} => register trades {{Trades}}
# transact:
#   {{DOUG}} => register markets {{Markets}}

# Initialize
transact:
  {{Halcyoncoin}} => {{Balances}} {{Indexes}} {{Trades}} {{Markets}} {{NameReg}} Halcyoncoin
transact:
  {{Balances}} => {{Halcyoncoin}} {{NameReg}} Halcyoncoin-Balances
transact:
  {{Indexes}} => {{Halcyoncoin}} {{NameReg}} Halcyoncoin-Indexes
transact:
  {{Trades}} => {{Halcyoncoin}} {{NameReg}} Halcyoncoin-Trades
transact:
  {{Markets}} => {{Halcyoncoin}} {{NameReg}} Halcyoncoin-Markets
transact:
  {{ETX}} => {{Halcyoncoin}} {{NameReg}} ETX
transact:
  {{XBTC}} => {{Halcyoncoin}} {{NameReg}} XBTC
transact:
  {{CAK}} => {{Halcyoncoin}} {{NameReg}} CAK
transact:
  {{FAB}} => {{Halcyoncoin}} {{NameReg}} FAB
transact:
  {{Halcyoncoin}} => 0x7 ETX {{ETX}} 0x5 0x8ac7230489e80000 0x5f5e100
transact:
  {{Halcyoncoin}} => 0x7 XBTC {{XBTC}} 0x8 0x8ac7230489e80000 0x5f5e100
transact:
  {{Halcyoncoin}} => 0x7 CAK {{CAK}} 0x4 0x8ac7230489e80000 0x186a0
transact:
  {{Halcyoncoin}} => 0x7 FAB {{FAB}} 0x4 0x8ac7230489e80000 0x2710

